<UserControl x:Class="CSharpNation.GUI.Controls.ErrorDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:CSharpNation.GUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="ControlBorder" BorderBrush="{DynamicResource SystemFillColorCriticalBrush}"
            Background="{DynamicResource SystemFillColorCriticalBackgroundBrush}" BorderThickness="1" CornerRadius="5">
        <Grid>
            <TextBlock x:Name="MessageTxt"
                       Text="Error message"
                       Margin="5"
                       Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                       TextWrapping="WrapWithOverflow"/>
        </Grid>
    </Border>
</UserControl>
